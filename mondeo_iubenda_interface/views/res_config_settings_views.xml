<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup.Iubenda</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                <div id="iubenda_integration">
                    <h2>Iubenda Integration</h2>
                    <div class="row mt16 o_settings_container" name="iubenda_setting_container">
                        <div class="col-xs-12 col-md-12 o_setting_box" id="iubenda_settings">
                        <div class="w-100">

                            <span class="o_form_label fw-bold">
                                Connection Settings to the Iubenda APIs
                            </span>
                            <span class="o_form_label mt-2">
                                For each service for which the Iubenda API Key is provided, the privacy settings for
                                each user stored in the Iubenda database will be synchronised in Odoo.
                            </span>

                        </div>
                        <div class="mt8">
                            <group>
                                <field name="iubenda_mondeo_web_apikey" password="True"/>
                                <field name="iubenda_wf_portal_apikey" password="True"/>
                            </group>
                        </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
