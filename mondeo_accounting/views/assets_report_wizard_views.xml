<odoo>

    <!-- Wizard Form view -->
    <record id="digdiuu_assets_report_wizard_view" model="ir.ui.view">
        <field name="name">digiduu.assets.report.wizard.form</field>
        <field name="model">digiduu.assets.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Assets Report">
                <group>
                    <group string="Assets settings">
                        <field name="company_id"/>
                        <field name="category_ids" widget="many2many_tags"/>
                        <field name="asset_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Date settings">
                        <field name="report_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_digiduu_assets_report" string="Print Report" class="oe_highlight" type="object"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="digiduu_assets_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Assets Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">digiduu.assets.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add menu to Accounting > Reporting -->
    <menuitem id="menu_digiduu_assets_report"
        name="Assets Report"
        parent="account.menu_finance_reports"
        action="digiduu_assets_report_wizard_action"
        groups="account.group_account_user"
        sequence="20"
    />
    
</odoo>
