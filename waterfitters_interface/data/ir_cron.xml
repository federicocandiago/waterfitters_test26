<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <!-- Sync Customers Cron Jobs -->
    <record id="ir_cron_mondeo_waterfitters_post_customers" model="ir.cron">
        <field name="name">Waterfitters - Sync customers to Waterfitters (POST)</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.sync_waterfitters_customers()</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <record id="ir_cron_mondeo_waterfitters_get_customers" model="ir.cron">
        <field name="name">Waterfitters - Retrieve customers from Waterfitters (GET)</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.wf_get_customers(datetime.datetime.now() - datetime.timedelta(minutes = 90))</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <record id="ir_cron_mondeo_waterfitters_get_customerusers" model="ir.cron">
        <field name="name">Waterfitters - Retrieve customerusers to be updated from Waterfitters (GET)</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.wf_get_users(datetime.datetime.now() - datetime.timedelta(minutes = 90))</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Get Orders Cron Job -->
    <record id="ir_cron_mondeo_waterfitters_get_orders" model="ir.cron">
        <field name="name">Waterfitters - Get Orders</field>
        <field name="model_id" ref="model_sync_waterfitters"/>
        <field name="state">code</field>
        <field name="code">env['sync.waterfitters'].orders(datetime.datetime.now() - datetime.timedelta(minutes = 150))</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Sync Sale order line -->
    <record id="ir_cron_mondeo_waterfitters_patch_sale_order_lines" model="ir.cron">
        <field name="name">Waterfitters - Sync Sale Order Lines to Waterfitters (PATCH)</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="state">code</field>
        <field name="code">env['sale.order.line'].search([('wf_order_line_to_be_synched', '=', True)]).sync_waterfitters_shipping_state()</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_root"/>
    </record>


</odoo>
